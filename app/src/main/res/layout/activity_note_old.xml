<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:scrollbars="vertical"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:stretchColumns="1">
            <TableRow
                android:padding="5dp" android:minHeight="40dp" android:gravity="center_vertical">
                <TextView
                    android:text="Title"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <!-- <EditText
                    android:id="@+id/form_note_title"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" /> -->
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/form_note_title"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </TableRow>
            <TableRow>
                <View
                    android:layout_span="2"
                    android:layout_margin="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
            </TableRow>
            <TableRow android:minHeight="40dp" android:gravity="center_vertical"
                android:padding="5dp">
                <!-- <TextView
                    android:text="Category"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" /> -->
                <!-- <Spinner
                    android:id="@+id/form_note_category"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dropDownSelector="@color/light_indigo"
                    android:spinnerMode="dropdown"
                    ></Spinner> -->
                <!-- <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/form_note_category"
                    app:ms_floatingLabelText="Category"
                    app:ms_baseColor="@color/light_indigo"
                    app:ms_highlightColor="@color/indigo"
                    app:ms_arrowColor="@color/dark_indigo"
                    app:ms_arrowSize="16dp"
                    app:ms_floatingLabelColor="@color/dark_indigo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" /> -->
            </TableRow>
            <TableRow>
                <View
                    android:layout_span="2"
                    android:layout_margin="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView android:text="Content" android:layout_span="2" />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <rokuan.com.eranote.additionalviews.LinedEditText
                    android:id="@+id/form_note_content"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:singleLine="false"
                    android:lines="5"
                    android:layout_span="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
                <View
                    android:layout_span="2"
                    android:layout_margin="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
            </TableRow>
        </TableLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_span="2" android:gravity="center_vertical">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:padding="15dp" android:layout_span="2" android:text="Attachments" />
            <ImageButton
                android:id="@+id/form_note_add_attachment"
                android:src="@drawable/ic_action_new_attachment_holo_dark"
                android:scaleType="fitCenter"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>
        <ListView
            android:id="@+id/form_note_attachments"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>
</ScrollView>