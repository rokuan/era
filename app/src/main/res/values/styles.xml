    </style>

    <style name="BrowseButton">
        <item name="android:layout_margin">0dp</item>
    </style>

    <!-- TOGGLE -->
    <style name="CleanToggleButton">
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="FavoriteNote" parent="CleanToggleButton">
        <item name="android:buttonStyleToggle">@style/FavoriteNoteToggle</item>
    </style>
    <style name="FavoriteNoteToggle">
        <item name="android:background">@drawable/favorite_toggle_button</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="EraHelp" parent="CleanToggleButton">
        <item name="android:buttonStyleToggle">@style/EraHelpToggle</item>
    </style>
    <style name="EraHelpToggle">
        <item name="android:background">@drawable/era_toggle_button</item>
